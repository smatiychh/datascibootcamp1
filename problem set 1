#problem 1
def Fibonacci(n):

    if n == 0:
        return 0
    elif n == 1 or n == 2:
        return 1
 
    else:
        return Fibonacci(n-1) + Fibonacci(n-2)

num_terms = 10

# Generate and print the Fibonacci series up to num_terms
fib_series = [Fibonacci(i) for i in range(num_terms)]
print(f"Fibonacci Series up to {num_terms} terms:")
print(fib_series)

