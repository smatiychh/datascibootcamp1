#problem 5
def countVowels(word):
    vowels = ["a","e","i","o","u"]
    return sum(word.lower().count(v) for v in vowels)
    
print(countVowels("data science"))

#problem 6
list = ['tiger', 'elephant', 'monkey', 'zebra', 'panther']
print([word.upper().replace('A', 'A', ) for word in list])

#problem 7
for num in range(1, 16):
    if num % 2 == 0:
        print("This number is even:",num)
    else:
        print("This number is odd:",num)

